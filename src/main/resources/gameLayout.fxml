<?import com.tetris.ui.views.GameOverPanel?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>

<Pane fx:controller="com.tetris.ui.controllers.GuiController"
      xmlns:fx="http://javafx.com/fxml">

    <!-- SCORE PANEL (top-center above NEXT + HOLD) -->
    <Pane fx:id="scorePanel"
          layoutX="250"
          layoutY="15"
          prefWidth="120"
          prefHeight="40"
          style="-fx-background-color: rgba(0,0,0,0.55); -fx-border-color: white; -fx-border-width: 2;">
        <Label fx:id="scoreLabel"
               text="SCORE: 0"
               layoutX="20"
               layoutY="10"
               style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" />
    </Pane>

    <GridPane fx:id="brickPanel" vgap="1" hgap="1" />

    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <!-- NEXT PANEL (top-right) - UPDATED FOR 3 PIECES -->
    <Pane fx:id="nextPiecePane"
          layoutX="250"
          layoutY="70"
          prefWidth="120" prefHeight="240"
          style="-fx-background-color: rgba(0, 0, 0, 0.55); -fx-border-color: white; -fx-border-width: 2;">

        <Label text="NEXT" layoutX="42" layoutY="8"
               style="-fx-text-fill: white; -fx-font-size: 14;" />

        <!-- Three next pieces stacked vertically -->
        <VBox layoutX="10" layoutY="30" spacing="-2" alignment="TOP_CENTER">
            <GridPane fx:id="nextPiecePanel1" hgap="1" vgap="1"
                      minWidth="80" minHeight="80"
                      prefWidth="80" prefHeight="80"/>

            <GridPane fx:id="nextPiecePanel2" hgap="1" vgap="1"
                      minWidth="80" minHeight="80"
                      prefWidth="80" prefHeight="80"/>

            <GridPane fx:id="nextPiecePanel3" hgap="1" vgap="1"
                      minWidth="80" minHeight="80"
                      prefWidth="80" prefHeight="80"/>
        </VBox>
    </Pane>

    <!-- HOLD PANEL (below NEXT) -->
    <Pane fx:id="holdPiecePane"
          layoutX="250"
          layoutY="320"
          prefWidth="100" prefHeight="90"
          style="-fx-background-color: rgba(0, 0, 0, 0.55); -fx-border-color: white; -fx-border-width: 2;">
        <Label text="HOLD" layoutX="28" layoutY="8"
               style="-fx-text-fill: white; -fx-font-size: 14;" />
        <GridPane fx:id="holdPieceGrid" layoutX="22" layoutY="30"/>
    </Pane>

    <Pane fx:id="pauseOverlay"
          visible="false"
          mouseTransparent="true"
          style="-fx-background-color: rgba(0,0,0,0.55);"
          layoutX="0" layoutY="0"
          prefWidth="400" prefHeight="500">

        <Label text="PAUSED"
               fx:id="pauseLabel"
               layoutX="130" layoutY="200"
               style="-fx-text-fill: white; -fx-font-size: 36; -fx-font-weight: bold;" />
    </Pane>

    <Button fx:id="pauseButton"
            text="PAUSE"
            onAction="#togglePause"
            layoutX="250"
            layoutY="420"
            prefWidth="120" prefHeight="35"
            style="-fx-background-color: black; -fx-border-color: white; -fx-text-fill: white;" />

    <!-- PAUSE OVERLAY -->
    <Pane fx:id="pauseOverlay"
          visible="false"
          layoutX="0" layoutY="0"
          prefWidth="600" prefHeight="600"
          style="-fx-background-color: rgba(0,0,0,0.35);">

        <VBox alignment="CENTER" spacing="14"
              layoutX="150" layoutY="150"
              prefWidth="200" prefHeight="250"
              style="-fx-background-color: #d9e1f2; -fx-border-color: #445; -fx-border-width: 3; -fx-background-radius: 6; -fx-border-radius: 6;">

            <Label text="PAUSED"
                   style="-fx-text-fill: #334; -fx-font-size: 22; -fx-font-weight: bold;"/>

            <Button fx:id="resumeButton" text="Resume"
                    style="-fx-font-size: 16; -fx-pref-width:140;" />

            <Button fx:id="restartButton" text="Restart"
                    style="-fx-font-size: 16; -fx-pref-width:140;" />

            <Button fx:id="quitButton" text="Quit"
                    style="-fx-font-size: 16; -fx-pref-width:140;" />
        </VBox>
    </Pane>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>
