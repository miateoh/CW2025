<?import com.tetris.ui.views.GameOverPanel?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<Pane fx:controller="com.tetris.ui.controllers.GuiController"
      xmlns:fx="http://javafx.com/fxml">

    <!-- SCORE PANEL (top-center above NEXT + HOLD) -->
    <Pane fx:id="scorePanel"
          layoutX="250"
          layoutY="15"
          prefWidth="120"
          prefHeight="40"
          style="-fx-background-color: rgba(0,0,0,0.55); -fx-border-color: white; -fx-border-width: 2;">
        <Label fx:id="scoreLabel"
               text="SCORE: 0"
               layoutX="20"
               layoutY="10"
               style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" />
    </Pane>

    <GridPane fx:id="brickPanel" vgap="1" hgap="1" />

    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <!-- NEXT PANEL (top-right) -->
    <Pane fx:id="nextPiecePane"
          layoutX="250"
          layoutY="70"
          prefWidth="100" prefHeight="90"
          style="-fx-background-color: rgba(0, 0, 0, 0.55); -fx-border-color: white; -fx-border-width: 2;">
        <Label text="NEXT" layoutX="28" layoutY="8"
               style="-fx-text-fill: white; -fx-font-size: 14;" />
        <GridPane fx:id="nextPieceGrid" layoutX="22" layoutY="30"/>
    </Pane>

    <!-- HOLD PANEL (below NEXT) -->
    <Pane fx:id="holdPiecePane"
          layoutX="250"
          layoutY="200"
          prefWidth="100" prefHeight="90"
          style="-fx-background-color: rgba(0, 0, 0, 0.55); -fx-border-color: white; -fx-border-width: 2;">
        <Label text="HOLD" layoutX="28" layoutY="8"
               style="-fx-text-fill: white; -fx-font-size: 14;" />
        <GridPane fx:id="holdPieceGrid" layoutX="22" layoutY="30"/>
    </Pane>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>

